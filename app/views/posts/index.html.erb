<div id="new_post_link">
	<% if current_user.try("admin?") %>
		<%= link_to "new post", {:controller => :posts, :action => :new} %>
	<% end %>
</div>
<% @posts.each do |p| %>
	<div class="post">
		<div class="post_title"><h3><%= link_to p.title, post_path(p) %></h3></div>
		<div class="post_excerpt"><%= p.excerpt %></div>		
	</div>
<% end %>
<% @posts.each do |p| %>
	<div class="post">
		<div class="post_title"><h2><%= link_to p.title, post_path(p) %></h2></div>
    <% if current_user.try("admin?") %>
      <span class="post_edit_link"><%= link_to "Edit", edit_post_path(p.id)%></span>
    <% end %>
		<div class="post_excerpt"><%= p.excerpt %></div>		
	</div>
<% end %>
<div class="post">
	<div class="post_title"><h3><%= @post.title%></h3></div>
	<div class="post_excerpt"><%= @post.body_to_html.html_safe %></div>		

	<% if @post.has_comments %>
	    <div><%= @post.comments.size %> Comments</div>
	<% end %>
	
	<% @post.get_all_child_comments.each do |comment| %>
		<%= render :partial => "comment", :locals => {:comment => comment} %>
	<% end %>
</div>